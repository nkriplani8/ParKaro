<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VehicalRegistration">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Vehichal"
                android:textColor="@color/colorgreen"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Details"
                android:textColor="#000"
                android:textSize="40dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/car_no"
            android:layout_width="357dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_input"
            android:elevation="2dp"
            android:gravity="center"
            android:hint="Licence Number"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/car_city"
            android:layout_width="357dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_input"
            android:elevation="2dp"
            android:gravity="center"
            android:hint="Registered in City"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintVertical_bias="0.905" />

        <EditText
            android:id="@+id/car_state"
            android:layout_width="357dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_input"
            android:elevation="2dp"
            android:gravity="center"
            android:hint="Registered in State"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/car_type"
            android:layout_width="357dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_input"
            android:elevation="2dp"
            android:gravity="center"
            android:hint="Vehical Type"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/car_model"
            android:layout_width="357dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_input"
            android:elevation="2dp"
            android:gravity="center"
            android:hint="Vehical Model"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="167dp"
            android:layout_height="51dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_style"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>